@model Question_2.Models.Movie

<h2>Delete Movie</h2>

@using (Html.BeginForm("DeleteConfirmed", "Movies", FormMethod.Post))
{
    @Html.HiddenFor(m => m.Mid)

    <div style="width:400px;margin:20px auto;padding:20px;border:1px solid #e74c3c;border-radius:8px;background:#fdecea;">
        <p>Are you sure you want to delete this movie?</p>

        <p><b>Movie Name:</b> @Model.Moviename</p>
        <p><b>Director:</b> @Model.DirectorName</p>
        <p><b>Date of Release:</b> @Model.DateofRelease.ToString("yyyy-MM-dd")</p>

        <button type="submit" style="padding:8px 15px;background:#e74c3c;color:white;border:none;border-radius:4px;">Delete</button>
        @Html.ActionLink("Back to List", "Index", null, new { style = "margin-left:10px;" })
    </div>
}
