@model IEnumerable<Question_2.Models.Movie>

<h2>All Movies</h2>

<p>
    @Html.ActionLink("Create New Movie", "Create")
</p>

<table border="1" cellpadding="5" cellspacing="0">
    <tr>
        <th>Mid</th>
        <th>Movie Name</th>
        <th>Director</th>
        <th>Date of Release</th>
        <th>Actions</th>
    </tr>
    @foreach (var m in Model)
    {
        <tr>
            <td>@m.Mid</td>
            <td>@m.Moviename</td>
            <td>@m.DirectorName</td>
            <td>@m.DateofRelease.ToString("yyyy-MM-dd")</td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = m.Mid }) |
                @Html.ActionLink("Delete", "Delete", new { id = m.Mid })
            </td>
        </tr>
    }
</table>
