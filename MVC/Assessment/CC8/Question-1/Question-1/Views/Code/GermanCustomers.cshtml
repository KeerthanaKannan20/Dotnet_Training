@model IEnumerable<Question_1.Models.Customer>

<h2 style="text-align:center;">Customers from Germany</h2>

@if (Model != null && Model.Any())
{
    <table style="width:60%; margin:20px auto; border:1px solid #ccc; border-collapse:collapse;">
        <thead>
            <tr style="background:#eee;">
                <th style="padding:8px; border:1px solid #ccc;">Customer ID</th>
                <th style="padding:8px; border:1px solid #ccc;">Company Name</th>
                <th style="padding:8px; border:1px solid #ccc;">City</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td style="padding:6px; border:1px solid #ccc;">@item.CustomerID</td>
                    <td style="padding:6px; border:1px solid #ccc;">@item.CompanyName</td>
                    <td style="padding:6px; border:1px solid #ccc;">@item.City</td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p style="text-align:center; color:red;">No German customers found.</p>
}
